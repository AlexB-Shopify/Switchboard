{
  "name": "switchboard",
  "version": "1.0.0",
  "description": "Switchboard is a simple integration layer between Shopify and a merchant's back office. It is designed to be a lightweight framework to keep a store in sync with its various sources of truth for Products, Inventory, Orders, Fulfillments, Catalogs, Content and Customer Data",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "dist/index.js",
  "bin": {
    "switchboard": "dist/index.js"
  },
  "scripts": {
    "start": "ts-node src/index.ts start",
    "start:demo": "ts-node src/index.ts start --demo",
    "start:prod": "ts-node src/index.ts start --production",
    "build": "tsc",
    "dev": "ts-node-dev --respawn src/index.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset --force",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@prisma/client": "^6.3.0",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "googleapis": "^171.1.0",
    "node-cron": "^3.0.3",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "@types/node-cron": "^3.0.11",
    "prisma": "^6.3.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
