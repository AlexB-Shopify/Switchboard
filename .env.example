# Shopify Configuration
SHOPIFY_STORE_DOMAIN="your-store"
SHOPIFY_CLIENT_ID="your-client-id-from-dev-dashboard"
SHOPIFY_CLIENT_SECRET="your-client-secret-from-dev-dashboard"
SHOPIFY_API_VERSION="2026-01"

# Google Sheets Configuration
GOOGLE_SHEETS_SPREADSHEET_ID="your-spreadsheet-id"

# Google Authentication (choose one method):
# Option 1: Service Account (recommended for production)
# If selectecting this option, ensure that the file is added to the .gitignore file
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"

# Option 2: API Key (read-only, good for testing)
# GOOGLE_SHEETS_API_KEY="your-api-key"

# Option 3: Application Default Credentials
# Run: gcloud auth application-default login

# Webhook Server Configuration
WEBHOOK_PORT=3000
# This is the webhook secret that is used to verify the webhook requests from Shopify
# This is the same as the Client Secret in the Shopify Dev Dashboard however if using the legacy Develop Apps Method 
# for creating credentials there will be a separate webhook secret in the app settings
WEBHOOK_SECRET="your-webhook-secret"
# Base URL for webhook registration (e.g., ngrok URL for local dev)
WEBHOOK_BASE_URL="https://your-tunnel-url.tunnel.io"

# Database Configuration
# Note: For SQLite, paths are relative to prisma/schema.prisma location
DATABASE_URL="file:./switchboard.db"

# Mode (demo or production) - can be overridden by CLI flag
MODE="demo"